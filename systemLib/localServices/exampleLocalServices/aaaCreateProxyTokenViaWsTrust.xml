<?xml version="1.0" encoding="UTF-8"?>
<aaa:aaaPolicy xmlns:aaa="http://www.intel.com/soae/localService/aaaDefinition-2007a/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.intel.com/soae/localService/aaaDefinition-2007a/ ../aaa.xsd">
  <identityProcessing>
    <mapIdentity>
      <createTokenViaWsTrust>
        <version>1.4</version>
        <soapVersion>1.1</soapVersion>
        <requestType>Issue</requestType>
        <tokenType>SAML-v2.0</tokenType>
        <rstFormat>RST</rstFormat>
        <clientAuthenticationMethod>
          <mechanism>Use_WS-Security_Policy_Group</mechanism>
          <expectedTokenType>BST</expectedTokenType>
          <source>
            <certificateFromSecurityConfig>demo-certificate</certificateFromSecurityConfig>
          </source>
        </clientAuthenticationMethod>
        <proofToken>
          <proofType>public-key</proofType>
          <source>
            <certificateFromSecurityConfig>demo_certificate</certificateFromSecurityConfig>
          </source>
          <useForSignature>true</useForSignature>
        </proofToken>
        <toFieldPopulation>true</toFieldPopulation>
      </createTokenViaWsTrust>
    </mapIdentity>
  </identityProcessing>
</aaa:aaaPolicy>
