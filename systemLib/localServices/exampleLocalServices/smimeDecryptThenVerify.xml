<?xml version="1.0" encoding="UTF-8"?>
<smime:smimePolicy xmlns:smime="http://www.intel.com/soae/localService/smimeDefinition-2007a/" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xsi:schemaLocation="http://www.intel.com/soae/localService/smimeDefinition-2007a/ ../smime.xsd">
  <decryptThenVerify>
    <decrypt>
      <keyPair>demo-public-private-key-pair</keyPair>
    </decrypt>
    <verify>
      <saveSignerCertificate>true</saveSignerCertificate>
      <authenticationPolicy>demo-authentication-policy</authenticationPolicy>
      <caPath>
        <fromSecurityConfig>demo-ca-path</fromSecurityConfig>
      </caPath>
    </verify>
  </decryptThenVerify>
</smime:smimePolicy>
