<message xmlns="http://www.intel.com/soae/protocolMetadata-2007a.xsd"
         xmlns:wsa="http://schemas.xmlsoap.org/ws/2004/08/addressing">
  <!-- In this example, an Invocation agent is writing content to a file -->
  <!-- This is indicated in the following protocol element -->
  <protocol>file</protocol>
  <fileMessage>
    <destination>
      <!-- application defined invocation agent name to process this request -->
      <invocationAgentName>IA-1</invocationAgentName>
    </destination>
    <transport>
      <!-- destination directory pathname where content with be saved -->
      <path>/nfs/pb/home/user-xyz/incoming</path>
      <!-- destination file name -->
      <file>XXXXXX.xml</file>
    </transport>
  </fileMessage>
</message>
